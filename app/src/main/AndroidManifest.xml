<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jp.projetoanimes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activitys.MainActivity"/>
        <activity android:name=".activitys.AdicionarActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activitys.DetailsActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activitys.EditActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".activitys.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>